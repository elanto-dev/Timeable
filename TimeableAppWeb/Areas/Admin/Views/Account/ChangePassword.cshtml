@model TimeableAppWeb.Areas.Admin.ViewModels.Account.ChangePasswordViewModel 
@{
    ViewData["Title"] = "Change password";
}

<h1>@Resources.Views.Account.Account.ChangePassword</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.PasswordSuccessfullyChanged)
            {
                <div class="alert alert-success" role="alert">
                    @Html.DisplayNameFor(m => m.PasswordSuccessfullyChanged)
                </div>
            }
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">@Html.DisplayNameFor(m => m.OldPassword)</label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">@Html.DisplayNameFor(m => m.Password)</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">@Html.DisplayNameFor(m => m.ConfirmPassword)</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Common.Save" class="btn light-blue-button" />
            </div>
        </form>
    </div>
</div>

